@model Projekt.Models.Hotell
 



@{
    ViewData["Title"] = "Details";
}

<h1>Detaljer för valt hotell</h1>

<div>
    <h4>Hotell</h4>
    <hr />
    <dl class="row">
     
        <dd class="col-sm-10">
            <img src="~/bilder/@Html.DisplayFor(model => model.Bild)" height="150px" />
        </dd>
     
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Namn)
        </dd>
      
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stad)
        </dd>
    </dl>
</div>




<div>
    @Html.ActionLink("Gå vidare med bokning", "Bokning", new { id = Model.HotellId }) |
    <a asp-action="SelectHotellWithDataSet">Gå tillbaka.</a>
</div>

